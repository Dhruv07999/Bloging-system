<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Hindu News</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        header {
            background-color: white;
            padding: 20px 0;
            border-bottom: 1px solid #ddd;
        }

        header .logo img {
            width: 200px;
        }

        header nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 15px;
        }

        header nav ul li {
            display: inline-block;
        }

        header nav ul li a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

        a {
            text-decoration: none; /* Removes underline */
            color: inherit; /* Ensures text inherits the default color */
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            color: #212529;
        }

        .sidebar {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li a {
            text-decoration: none;
            color: #333;
            display: block;
            padding: 5px 0;
            font-size: 1rem;
        }

        .sidebar ul li a:hover {
            color: #007bff;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container d-flex justify-content-between align-items-center">
            <div class="logo">
                <a href="/"><img src="/img/thehindu-logo.svg" alt="The Hindu"></a>
            </div>
            <nav>
                <ul class="d-flex align-items-center">
                    <li><a href="/">Home</a></li>
                    <li>
                        <form class="d-flex">
                            <input type="text" class="form-control me-2" placeholder="Search..." name="searchBlog">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </form>
                    </li>
                    
                    <% if(locals.user) { %>
                        <li><%= locals.user.registerName %></li>
                    <% } else { %>
                        <li><a href="/userLogin" class="btn btn-outline-dark">Login</a></li>
                    <% } %>
                  
                    <li><a href="/userRegister" class="btn btn-outline-dark">Register</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container my-5">
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-md-3">
                <div class="sidebar">
                    <h4>Categories</h4>
                    <ul>
                        <li><a href="/">All (<%= getBlog %>)</a></li>
                        <% allCategory.map((v, i) => { %>
                            <li><a href="/?categoryId=<%= v._id %>"><%= v.categoryName %> (<%= v.Blog_Ids.length %>)</a></li>
                        <% }) %>
                    </ul>
                </div>
            </aside>

            <!-- Blog Section -->
            <main class="col-md-9">
                <div class="row">
                    <% allBlog.map((v, i) => { %>
                        <div class="col-md-4 mb-4">
                            <a href="/catrgoryPost/?catpost=<%= v.id %>" class="">
                                <div class="card h-100">
                                    <img src="<%= v.blogImage %>" class="card-img-top" alt="<%= v.blogTitle %>">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= v.blogTitle %></h5>
                                        <div class="btn btn-primary mt-2">
                                            Read More
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                </div>
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2025 The Hindu News. All Rights Reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
